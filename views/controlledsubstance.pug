extends layout

block content
  div(class='patient')
    div(class='patientName') #{patient.LastName.value}, #{patient.FirstName.value}
    div(class='patientMrn') MRN: #{patient.MRN.value}

  div(class='title')
    div #{title}

  div(class='controlledsubstances')
    each controlledSubstance, i in controlledSubstances
      div(class='controlledsubstance')
        div= controlledSubstance.MedicationName.value
        div(class='controlledsubstancelastdate')= moment(controlledSubstance.DatePrescribed.value).format("MMM Do YYYY")             
        div(class='controlledsubstanceContainer')
          ol
            each controlledSubstanceItem, i in controlledSubstance.controlledSubstanceItems
              li(class='controlledsubstanceItem')
                div(class='controlledsubstanceItemName') #{controlledSubstanceItem.ItemName.value}
                div(class='controlledsubstanceItemDate')= moment(controlledSubstanceItem.DatePrescribed.value).format("MMM Do YYYY")    
                div(class='controlledsubstanceItemDr')= controlledSubstanceItem.PrescribedByDoctor.value

  div(class='links')
    div
      a(href =urltoinsightspane) Insights